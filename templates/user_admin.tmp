<script>
    // Only admins and moderators can access this page
    if (!hasAnyOfRoles(['admin', 'moderator'])) {
        location.href = 'index';
    }
</script>
<script src="js/dialog.js"></script>
<script src="js/admin.js"></script>
<link rel="stylesheet" href="style/admin.css">
<h1 localizable>User Administration</h1>
<div class="user_admin admin-container" style="margin-bottom: 20px;" hidden=true></div>
@param pageSize=150
@param withSearch=true
@param keepIfEmpty=true
@param widgetName=user_admin
@include=grid
@param keepIfEmpty=false
<script>
    var role = '',
        verified = '';
    ${widgetName}_loadPage =
        function (query, pageSize, pageNumber, onSuccess) {
            SnapCloud.withCredentialsRequest(
                'GET',
                '/users?' +
                    (query ?
                        'matchtext=' + encodeURIComponent(query) + '&' : '' ) +
                    'pagesize=' + pageSize + '&page=' + pageNumber +
                    (role !== '' ?
                        '&role=' + role
                        : '') +
                    (verified !== '' ?
                        '&verified=' + verified
                        : ''),
                onSuccess,
                genericError,
                'Could not fetch user list'
            );
        };

    ${widgetName}_onLoadPage =
        function (response, targetElement) {
            response.users.forEach(function (user) {
                targetElement.appendChild(userDiv(user));
            });
        };

    ${widgetName}_initGrid(function(){
        var bar = document.querySelector('.container .bar'),
            paginator = bar.querySelector('.paginator');
        bar.insertBefore(
            verifiedFilter(
                function (value) {
                    verified = value;
                    ${widgetName}_toPage(1);
                }
            ),
            paginator);
        bar.insertBefore(
            roleFilter(
                function (value) {
                    role = value;
                    ${widgetName}_toPage(1);
                }
            ),
            paginator);
        bar.insertBefore(
            generalButton(
                "Bulk Edit",
                function () {
                    document.getElementsByName("user_checkbox").forEach(
                        function(user_checkbox) {
                            user_checkbox.hidden = !user_checkbox.hidden;
                        }
                    );
                    var admin_container = document.querySelector('.admin-container');
                    admin_container.hidden = !admin_container.hidden;
                }
            ),
            paginator);

        var admin_select_ctrls = document.querySelector('.admin-container');
        admin_select_ctrls.appendChild(
            generalButton(
                "Verify Selected",
                () => { verifyMultipleUsers(document.getElementsByName("user_checkbox")); }
            )
        );

    });
</script>
